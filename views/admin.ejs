<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Admin Panel</title>
<style>
/* Your previous styles for admin panel (login, table, popup, etc.) */
</style>
</head>
<body>

<!-- Login Form -->
<div id="loginForm">
    <h1>Admin Login</h1>
    <input type="text" id="username" placeholder="Username" required>
    <input type="password" id="password" placeholder="Password" required>
    <button onclick="login()">Login</button>
    <p id="error"></p>
</div>

<!-- Admin Panel -->
<div id="adminPanel">
    <h1>Admin Panel</h1>
    <a href="#" class="logout" onclick="logout()">Logout</a>

    <!-- Items Section -->
    <h3>Add Item</h3>
    <form action="/admin/add" method="POST">
        <input type="text" name="name" placeholder="Item Name" required>
        <input type="number" name="price" placeholder="Price" required>
        <button type="submit">Add Item</button>
    </form>

    <h3>Item List</h3>
    <table>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
        <% items.forEach(item=> { %>
        <tr>
            <form action="/admin/update/<%= item._id %>" method="POST">
                <td><input type="text" name="name" value="<%= item.name %>"></td>
                <td><input type="number" name="price" value="<%= item.price %>"></td>
                <td>
                    <button type="submit">Update</button>
            </form>
            <form action="/admin/delete/<%= item._id %>" method="POST" style="display:inline;">
                <button type="submit">Delete</button>
            </form>
            </td>
        </tr>
        <% }) %>
    </table>

    <!-- Orders Section -->
    <h3>Customer Orders</h3>
    <table>
        <thead>
            <tr>
                <th>Customer Number</th>
                <th>Items</th>
                <th>Grand Total (₹)</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
            <tr>
                <td><%= order.customerNumber %></td>
                <td>
                    <ul>
                        <% order.items.forEach(item => { %>
                        <li><%= item.name %> - <%= item.quantity %> x ₹<%= item.price %></li>
                        <% }) %>
                    </ul>
                </td>
                <td>₹<%= order.grandTotal %></td>
                <td><%= order.date.toLocaleString() %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<script>
// Login / Logout JS (same as your previous admin.ejs)
</script>

</body>
</html>
