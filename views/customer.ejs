<!DOCTYPE html>
<html>
<head>
    <title>Customer - Place Order</title>
</head>
<body>
    <h2>Items Available</h2>
    <form action="/customer/order" method="POST">
        <input type="text" name="customerName" placeholder="Your Name" required>
        <input type="text" name="customerPhone" placeholder="Phone Number" required>
        <table border="1" cellpadding="5" cellspacing="0">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach((item, i) => { %>
                    <tr>
                        <td><%= item.name %></td>
                        <td><%= item.price %></td>
                        <td>
                            <input type="number" name="items[<%= i %>][quantity]" min="0" value="0">
                            <input type="hidden" name="items[<%= i %>][name]" value="<%= item.name %>">
                            <input type="hidden" name="items[<%= i %>][price]" value="<%= item.price %>">
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <button type="submit">Place Order</button>
    </form>
</body>
</html>
