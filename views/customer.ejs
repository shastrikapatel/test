<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Price List</title>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 10px;
        padding: 0;
    }
    h2 {
        text-align: center;
        margin-bottom: 20px;
    }
    .input-section {
        display: flex;
        justify-content: center;
        margin-bottom: 15px;
        flex-wrap: wrap;
    }
    .input-section input {
        padding: 10px;
        font-size: 16px;
        width: 90%;
        max-width: 400px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
    .table-container {
        width: 100%;
        overflow-x: auto;
    }
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }
    th, td {
        padding: 10px;
        text-align: center;
        border: 1px solid #ddd;
        font-size: 14px;
    }
    .total {
        font-size: 20px;
        font-weight: bold;
        text-align: center;
        margin-bottom: 15px;
    }
    .button-group {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 15px;
        flex-wrap: wrap;
        margin-top: 20px;
        text-align: center;
    }
    .button-group button {
        padding: 10px 15px;
        font-size: 16px;
        cursor: pointer;
        border: none;
        border-radius: 5px;
        background-color: #28a745;
        color: #fff;
        transition: background 0.3s;
    }
    .button-group button:hover {
        background-color: #218838;
    }
    .button-group button:nth-child(2) {
        background-color: #6c757d;
    }
    .button-group button:nth-child(2):hover {
        background-color: #5a6268;
    }

    /* Popup Styles */
    .popup-overlay {
        position: fixed;
        top: 0; left: 0;
        width: 100%; height: 100%;
        background: rgba(0,0,0,0.6);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 999;
    }
    .popup {
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        width: 90%;
        max-width: 400px;
        text-align: center;
    }
    .popup h3 {
        margin-bottom: 15px;
    }
    .popup ul {
        text-align: left;
        margin-bottom: 15px;
        max-height: 200px;
        overflow-y: auto;
    }
    .popup ul li {
        font-size: 18px;
        margin: 5px 0;
    }
    .popup .popup-buttons {
        display: flex;
        justify-content: space-between;
    }
    .popup button {
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        font-size: 14px;
        cursor: pointer;
    }
    .popup .send-btn {
        background: #28a745;
        color: #fff;
    }
    .popup .cancel-btn {
        background: #dc3545;
        color: #fff;
    }

    /* Message Popup */
    .message-box {
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        max-width: 300px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0,0,0,0.3);
    }
    .message-box p {
        font-size: 16px;
        margin-bottom: 15px;
    }
    .message-box button {
        padding: 8px 15px;
        background: #28a745;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    /* Mobile Responsive Table -> Horizontal Line */
    @media (max-width: 768px) {
        table, thead, tbody, th, td, tr {
            display: block;
            width: 100%;
        }
        thead {
            display: none;
        }
        tr {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
            background: #f9f9f9;
            /* padding: 10px; */
            border: 1px solid #ddd;
            border-radius: 8px;
            width: 99%;
        }
        td {
            border: none;
            padding: 5px;
            font-size: 14px;
        }
        td.total-price {
            display: none; /* Hide Total column in mobile */
        }
        td button {
            padding: 5px 10px;
            margin: 0 5px;
        }
        .input-section input{
            width: 50%;
        }
    }
</style>
</head>
<body>

<h2>Order Items</h2>
<form method="POST" action="/confirm">
    <input type="text" name="customerName" placeholder="Your Name" required>
    <input type="text" name="phone" placeholder="WhatsApp Number with country code" required>
    
    <h3>Select Items:</h3>
    <% items.forEach(item => { %>
        <input type="checkbox" name="selectedItems" value="<%= item.name %>"> <%= item.name %> - ₹<%= item.price %><br>
    <% }) %>
    
    <button type="submit">Confirm Order</button>
</form>

<script>
const adminNumber = '917600361112'; // Replace with your admin WhatsApp number including country code

function updateTotal() {
    let total = 0;
    document.querySelectorAll('#itemList tr').forEach(row => {
        let price = parseInt(row.querySelector('.price').getAttribute('data-price'));
        let qty = parseInt(row.querySelector('.qty').textContent);
        let rowTotal = price * qty;
        row.querySelector('.total-price').textContent = rowTotal;
        total += rowTotal;
    });
    document.getElementById('grandTotal').textContent = total;
}

function increaseQty(button) {
    let qtyElement = button.parentElement.querySelector('.qty');
    qtyElement.textContent = parseInt(qtyElement.textContent) + 1;
    updateTotal();
}

function decreaseQty(button) {
    let qtyElement = button.parentElement.querySelector('.qty');
    if (parseInt(qtyElement.textContent) > 0) {
        qtyElement.textContent = parseInt(qtyElement.textContent) - 1;
        updateTotal();
    }
}

function resetCart() {
    document.querySelectorAll('#itemList tr .qty').forEach(qty => qty.textContent = 0);
    updateTotal();
}

// Show custom message popup
function showMessage(msg) {
    document.getElementById('messageText').textContent = msg;
    document.getElementById('messageOverlay').style.display = 'flex';
}

function closeMessage() {
    document.getElementById('messageOverlay').style.display = 'none';
}

// Prepare popup with selected items
function prepareWhatsApp() {
    let name = document.getElementById('customerName').value.trim();
    if (!name) { 
        showMessage('Please enter your number.'); 
        return; 
    }

    let selectedItems = [];
    document.querySelectorAll('#itemList tr').forEach(row => {
        let qty = parseInt(row.querySelector('.qty').textContent);
        if (qty > 0) {
            let itemName = row.cells[0].textContent;
            let price = row.cells[1].textContent;
            selectedItems.push(`${itemName} - ${qty} x ${price}`);
        }
    });

    if (selectedItems.length === 0) {
        showMessage('Please select at least one item.');
        return;
    }

    document.getElementById('selectedItemsList').innerHTML = selectedItems.map(item => `<li>${item}</li>`).join('');
    document.getElementById('popupGrandTotal').textContent = document.getElementById('grandTotal').textContent;
    document.getElementById('popupOverlay').style.display = 'flex';
}

function closePopup() {
    document.getElementById('popupOverlay').style.display = 'none';
}

// Send to WhatsApp after confirmation
function sendWhatsApp() {
    let name = document.getElementById('customerName').value.trim();
    let message = `Order from ${name}:%0A`;
    document.querySelectorAll('#itemList tr').forEach(row => {
        let qty = parseInt(row.querySelector('.qty').textContent);
        if (qty > 0) {
            let itemName = row.cells[0].textContent;
            let price = row.querySelector('.price').textContent.replace('₹', '');
            message += `${itemName} - ${qty} x ₹${price} = ₹${qty * price}%0A`;
        }
    });
    message += `Grand Total: ₹${document.getElementById('grandTotal').textContent}`;
    
    document.getElementById('popupOverlay').style.display = 'none';
    window.open(`https://wa.me/${adminNumber}?text=${message}`, '_blank');
}

updateTotal(); // initial call
</script>

</body>
</html>
